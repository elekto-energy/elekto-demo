.battery-plan {
  background-color: #111;
  color: #f0f0f0;
  padding: 2rem;
  border-radius: 1.5rem;
  box-shadow: 0 0 20px rgba(0, 255, 255, 0.1);
  font-family: 'Segoe UI', sans-serif;
  max-width: 950px;
  margin: auto;
}

.futuristic-card h2 {
  font-size: 1.8rem;
  color: #00ffff;
  margin-bottom: 1rem;
}

.toggle-group, .input-group {
  margin-bottom: 1.5rem;
  font-size: 1rem;
}

input[type="checkbox"], input[type="number"] {
  margin-left: 0.5rem;
}

.hour-selector p {
  margin-bottom: 0.5rem;
  font-weight: 600;
  color: #ccc;
}

.hour-grid {
  display: grid;
  grid-template-columns: repeat(12, 1fr);
  gap: 6px;
  margin-bottom: 1.5rem;
}

.hour-box {
  padding: 8px;
  text-align: center;
  background: #222;
  border: 1px solid #444;
  border-radius: 8px;
  cursor: pointer;
  font-size: 0.85rem;
  transition: all 0.2s ease;
}

.hour-box:hover {
  background: #2a2a2a;
}

.hour-box.selected {
  background: #00ffff;
  color: #000;
  font-weight: bold;
  border-color: #00ffff;
}

.chart-placeholder {
  padding: 1.5rem;
  background: #1b1b1b;
  border: 1px dashed #555;
  border-radius: 1rem;
  text-align: center;
  font-style: italic;
  color: #888;
}

